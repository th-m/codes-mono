{
  "extends": "@nrwl/workspace/presets/core.json",
  "plugins": ["@nxtensions/astro"],
  "npmScope": "th-m.codes",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore"
      ]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": ["build", "lint", "test", "e2e", "check"],
        "accessToken": "ODU1MjkwMTItNjI0NC00ODRkLThhZTMtOGY5OWMxYjlmMDJkfHJlYWQtd3JpdGU="
      }
    }
  },
  "affected": {
    "defaultBase": "main"
  },
  "cli": {
    "defaultCollection": "@nrwl/workspace"
  },
  "defaultProject": "blog",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  }
}
